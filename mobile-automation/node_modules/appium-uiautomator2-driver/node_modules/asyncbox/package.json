{
  "name": "asyncbox",
  "description": "A collection of small async/await utilities",
  "tags": [
    "async/await",
    "es7",
    "async"
  ],
  "version": "6.1.0",
  "author": "jlipps@gmail.com",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/asyncbox.git"
  },
  "bugs": {
    "url": "https://github.com/appium/asyncbox/issues"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0",
    "npm": ">=10"
  },
  "main": "./build/lib/asyncbox.js",
  "bin": {},
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib/**/*",
    "build/lib/**/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "npm run build -- --clean",
    "rebuild": "npm run clean; npm run build",
    "dev": "npm run build -- --watch",
    "prepare": "npm run rebuild",
    "test": "mocha --exit --timeout 1m \"./test/**/*-specs.ts\"",
    "lint": "eslint .",
    "format": "prettier -w ./lib",
    "watch": "npm run dev"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@appium/eslint-config-appium-ts": "^3.0.0",
    "@appium/tsconfig": "^1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "chai": "^6.2.1",
    "chai-as-promised": "^8.0.2",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^5.1.6"
  },
  "types": "./build/lib/asyncbox.d.ts"
}
